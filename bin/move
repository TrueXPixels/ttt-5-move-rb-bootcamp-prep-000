#!/usr/bin/env ruby

require_relative '../lib/move.rb'

# Code your CLI Here

# Welcome Message
puts "Welcome to Tic Tac Toe!"

# Declare Board
board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

# Display Board
display_board(board)
puts "Where would you like to go?"
input = gets.strip
input = input_to_index input
move(board, input)
display_board(board)